import { siteConfig } from '../config/site';

interface Props {
  /** ãƒšãƒ¼ã‚¸ã‚¿ã‚¤ãƒˆãƒ«ï¼ˆå¿…é ˆï¼‰ */
  title: string;
  /** ãƒšãƒ¼ã‚¸ã®èª¬æ˜ï¼ˆå¿…é ˆï¼‰ */
  description: string;
  /** ãƒšãƒ¼ã‚¸URLï¼ˆä»»æ„ï¼‰ */
  url?: string;
  /** OGPç”»åƒURLï¼ˆä»»æ„ï¼‰ */
  image?: string;
  /** ãƒšãƒ¼ã‚¸ã‚¿ã‚¤ãƒ—ï¼ˆãƒ‡ãƒ•ã‚©ãƒ«ãƒˆ: websiteï¼‰ */
  type?: 'website' | 'article';
  /** å…¬é–‹æ—¥ï¼ˆè¨˜äº‹ç”¨ï¼‰ */
  publishedTime?: Date;
  /** æ›´æ–°æ—¥ï¼ˆè¨˜äº‹ç”¨ï¼‰ */
  modifiedTime?: Date;
  /** ã‚¿ã‚°ï¼ˆè¨˜äº‹ç”¨ï¼‰ */
  tags?: string[];
  /** è‘—è€…å */
  author?: string;
  /** ã‚µã‚¤ãƒˆå */
  siteName?: string;
  /** Twitter Cardã‚¿ã‚¤ãƒ— */
  twitterCard?: 'summary' | 'summary_large_image';
  /** Twitter ã‚¢ã‚«ã‚¦ãƒ³ãƒˆ */
  twitterSite?: string;
  /** æ­£è¦URL */
  canonicalUrl?: string;
  /** noindexè¨­å®š */
  noindex?: boolean;
}

const {
  title,
  description,
  url,
  image = 'https://placehold.co/1200x630',
  type = 'website',
  publishedTime,
  modifiedTime,
  tags = [],
  author = siteConfig.author.name,
  siteName = siteConfig.fullName,
  twitterCard = 'summary_large_image',
  twitterSite,
  canonicalUrl,
  noindex = false,
} = Astro.props;

// ã‚µã‚¤ãƒˆURLã®å–å¾—ï¼ˆæœ«å°¾ã‚¹ãƒ©ãƒƒã‚·ãƒ¥ã‚’é™¤å»ï¼‰
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || siteConfig.url;
const pageUrl = url || Astro.url.href;
const canonical = canonicalUrl || pageUrl;

// JSON-LD: WebSiteã‚¹ã‚­ãƒ¼ãƒ
const websiteSchema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: siteName,
  url: siteUrl,
  description: siteConfig.fullDescription,
  inLanguage: 'ja',
  publisher: {
    '@type': 'Organization',
    name: siteName,
    url: siteUrl,
  },
};

// JSON-LD: Articleã‚¹ã‚­ãƒ¼ãƒï¼ˆè¨˜äº‹ãƒšãƒ¼ã‚¸ã®ã¿ï¼‰
const articleSchema =
  type === 'article'
    ? {
        '@context': 'https://schema.org',
        '@type': 'Article',
        headline: title,
        description: description,
        image: image,
        author: {
          '@type': 'Person',
          name: author,
        },
        publisher: {
          '@type': 'Organization',
          name: siteName,
          url: siteUrl,
        },
        mainEntityOfPage: {
          '@type': 'WebPage',
          '@id': pageUrl,
        },
        datePublished: publishedTime?.toISOString(),
        dateModified: modifiedTime?.toISOString() || publishedTime?.toISOString(),
        keywords: tags.join(', '),
        inLanguage: 'ja',
      }
    : null;

// JSON-LD: BreadcrumbListã‚¹ã‚­ãƒ¼ãƒ
const breadcrumbSchema = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement: [
    {
      '@type': 'ListItem',
      position: 1,
      name: 'Home',
      item: siteUrl,
    },
    ...(type === 'article'
      ? [
          {
            '@type': 'ListItem',
            position: 2,
            name: title,
            item: pageUrl,
          },
        ]
      : []),
  ],
};
---

<!-- åŸºæœ¬ãƒ¡ã‚¿ã‚¿ã‚° (NFR-101) -->
<meta name="description" content={description} />
<link rel="canonical" href={canonical} />
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- OGPãƒ¡ã‚¿ã‚¿ã‚° (NFR-102) -->
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:type" content={type} />
<meta property="og:url" content={pageUrl} />
<meta property="og:image" content={image} />
<meta property="og:site_name" content={siteName} />
<meta property="og:locale" content="ja_JP" />

<!-- è¨˜äº‹ç”¨OGPãƒ¡ã‚¿ã‚¿ã‚° -->
{
  type === 'article' && publishedTime && (
    <meta property="article:published_time" content={publishedTime.toISOString()} />
  )
}
{
  type === 'article' && modifiedTime && (
    <meta property="article:modified_time" content={modifiedTime.toISOString()} />
  )
}
{type === 'article' && author && <meta property="article:author" content={author} />}
{
  type === 'article' &&
    tags.map((tag) => <meta property="article:tag" content={tag} />)
}

<!-- Twitter Cardãƒ¡ã‚¿ã‚¿ã‚° (NFR-103) -->
<meta name="twitter:card" content={twitterCard} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={image} />
{twitterSite && <meta name="twitter:site" content={'@' + twitterSite} />}

<!-- JSON-LDæ§‹é€ åŒ–ãƒ‡ãƒ¼ã‚¿ (NFR-104) -->
<script is:inline type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
{
  type === 'article' && articleSchema && (
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(articleSchema)}
    />
  )
}
<script
  is:inline
  type="application/ld+json"
  set:html={JSON.stringify(breadcrumbSchema)}
/>
