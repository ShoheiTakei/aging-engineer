import { getCollection } from 'astro:content';
import type { GetStaticPathsOptions, Page } from 'astro';
import Pagination from '../../../components/Pagination.astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';

interface BlogPost {
  id: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate: Date;
    coverImage: string;
    tags: string[];
    draft: boolean;
  };
}

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  /** 1„Éö„Éº„Ç∏„ÅÇ„Åü„Çä„ÅÆË®ò‰∫ãÊï∞ */
  const PAGE_SIZE = 5;

  // ÂÖ®„Éñ„É≠„Ç∞Ë®ò‰∫ã„ÇíÂèñÂæóÔºà‰∏ãÊõ∏„Åç„ÇíÈô§Â§ñÔºâ
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);

  // ÂÖ®„Çø„Ç∞„ÇíÂèéÈõÜ
  const allTags = new Set<string>();
  for (const post of allPosts) {
    for (const tag of post.data.tags) {
      allTags.add(tag);
    }
  }

  // „Çø„Ç∞„Åî„Å®„Å´„Éö„Éº„Ç∏„ÇíÁîüÊàê
  const paths = [];
  for (const tag of allTags) {
    // Ë©≤ÂΩì„Çø„Ç∞„ÅÆË®ò‰∫ã„ÇíÊäΩÂá∫„Åó„Å¶ÂÖ¨ÈñãÊó•ÈôçÈ†Ü„ÇΩ„Éº„Éà
    const taggedPosts = allPosts
      .filter((post) => post.data.tags.includes(tag))
      .sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

    // „Éö„Éº„Ç∏„Éç„Éº„Ç∑„Éß„É≥Ë®≠ÂÆöÔºà5‰ª∂/„Éö„Éº„Ç∏Ôºâ
    const paginatedPaths = paginate(taggedPosts, {
      params: { tag },
      pageSize: PAGE_SIZE,
    });

    paths.push(...paginatedPaths);
  }

  return paths;
}

interface Props {
  page: Page<BlogPost>;
}

const { page } = Astro.props;
const { tag } = Astro.params;
const PAGE_SIZE = 5;
