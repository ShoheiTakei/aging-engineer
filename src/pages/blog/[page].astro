import { getCollection } from 'astro:content';
import type { GetStaticPathsOptions, Page } from 'astro';
import Pagination from '../../components/Pagination.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

interface BlogPost {
  id: string;
  data: {
    title: string;
    description: string;
    pubDate: Date;
    updatedDate: Date;
    coverImage: string;
    tags: string[];
