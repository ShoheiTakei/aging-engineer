}

/** 1„Éö„Éº„Ç∏„ÅÇ„Åü„Çä„ÅÆË®ò‰∫ãÊï∞ */
const PAGE_SIZE = 5;

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  // ÂÖ®„Éñ„É≠„Ç∞Ë®ò‰∫ã„ÇíÂèñÂæóÔºà‰∏ãÊõ∏„Åç„ÇíÈô§Â§ñ„ÄÅÂÖ¨ÈñãÊó•ÈôçÈ†ÜÔºâ
  const allPosts = await getCollection('blog', ({ data }) => !data.draft);

  // ÂÖ¨ÈñãÊó•„ÅßÈôçÈ†Ü„ÇΩ„Éº„Éà
  const sortedPosts = allPosts.sort((a, b) => b.data.pubDate.getTime() - a.data.pubDate.getTime());

  // „Éö„Éº„Ç∏„Éç„Éº„Ç∑„Éß„É≥Ë®≠ÂÆöÔºà5‰ª∂/„Éö„Éº„Ç∏Ôºâ
  return paginate(sortedPosts, { pageSize: PAGE_SIZE });
}

interface Props {
  page: Page<BlogPost>;
}

const { page } = Astro.props;
